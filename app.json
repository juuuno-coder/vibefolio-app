{
  "expo": {
    "name": "Vibefolio",
    "slug": "vibefolio-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "vibefolio",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "net.vibefolio.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Used to take photos for your projects",
        "NSPhotoLibraryUsageDescription": "Used to upload images for your projects"
      },
      "associatedDomains": ["applinks:vibefolio.net"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "net.vibefolio.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "vibefolio.net",
              "pathPrefix": "/project"
            },
            {
              "scheme": "https",
              "host": "vibefolio.net",
              "pathPrefix": "/recruit"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Used to upload images for your projects",
          "cameraPermission": "Used to take photos for your projects"
        }
      ]
    ]
  }
}
